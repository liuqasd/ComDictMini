/* 关于页面样式 */
.about-page {
  padding: 20rpx;
}

/* 页面标题样式 */
.page-title {
  font-size: 40rpx;
  font-weight: bold;
	margin-bottom: 36rpx;
	margin-left: 20rpx;
}

/* 卡片样式 */
.card {
  margin-bottom: 20rpx;
  background-color: #fff;
  border-radius: 10rpx;
  box-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.1);
}

/* 卡片头部样式 */
.card-header {
  padding: 40rpx;
  border-bottom: 1rpx solid #eee;
}

/* 卡片标题样式 */
.card-title {
  font-weight: bold;
}

/* 卡片内容样式 */
.card-content {
  padding: 28rpx;
}

/* 内容文字样式 */
.content-text {
  font-size: 28rpx;
  color: #333;
}
