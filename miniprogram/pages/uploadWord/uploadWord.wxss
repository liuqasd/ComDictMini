.container {
	padding: 20px;
	background-color: #f7f7f7;
}

.card {
  background-color: #fff;
  border-radius: 10px;
  box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
  margin-bottom: 20px;
	overflow: hidden;
}

.header {
  display: flex;
	padding: 15px 20px;
  border-bottom: 1px solid #ddd;
}

.title {
  font-size: 20px;
	font-weight: bold;
	color: #333;
}

.body {
  padding: 20px;
}

/* 单个条目 */
.item {
  margin-bottom: 10px;
}

/* 标签 */
.label {
  font-size: 14px;
  color: #666;
  margin-bottom: 5px;
}

/* 输入框 */
.input {
  width: 100%;
  height: 40px;
  padding: 10px;
  border: 1px solid #ddd;
  border-radius: 5px;
  font-size: 14px;
  color: #333;
}

/* 文本域 */
.textarea {
  width: 100%;
  height: 80px;
  padding: 10px;
  border: 1px solid #ddd;
  border-radius: 5px;
  font-size: 14px;
  color: #333;
}

/* 按钮 */
.button {
  width: 100%;
  height: 40px;
  line-height: 40px;
  text-align: center;
  background-color: #337ab7;
  color: #fff;
  border-radius: 5px;
}

/* 卡片底部 */
.footer {
  padding: 15px 20px;
  border-top: 1px solid #ddd;
}

/* 按钮 */
.button {
  width: 100%;
  height: 40px;
  line-height: 40px;
  text-align: center;
  color: #fff;
  border-radius: 5px;
}

