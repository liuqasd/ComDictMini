.container {
  padding: 20px;
}

.card {
  background-color: #fff;
  border-radius: 10px;
  box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
  margin-bottom: 20px;
  width: 680rpx;
}

.header {
  display: flex;
  padding: 10px;
  border-bottom: 1px solid #ddd;
}

.header_speech {
  display: flex;
  padding: 10px;
}

.title {
  font-size: 24px;
  font-weight: bold;
}

.part-of-speech {
  font-size: 18px;
  color: #999;
  display: flex;
}

.body {
  padding: 20px;
}

.definition {
  font-size: 16px;
  margin-bottom: 10px;
  display: flex;
}

/*音标*/
